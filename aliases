# Most frequent
alias i='sudo apt install'
alias ip=ipython
alias mx='chmod u+x'
alias p=python3
alias s='sudo $(fc -ln -1)'
alias sz='source ~/.zshrc'
alias t=tree
alias tk=take
alias v=vim
alias va='vim ~/.aliases && source ~/.aliases'
alias vv='vim ~/.vimrc'
alias vz='vim ~/.zshrc && source ~/.zshrc'
alias w=view

# Better defaults
alias cp='cp -ir'
alias mv='mv -i'
alias rm='rm -Ir'
alias df=pydf

# Git
alias gco='git checkout'
alias gst='git status -s'

# Clipboard
alias ci='xclip -i -selection clipboard'
alias co='xclip -o -selection clipboard'
alias cpwd='pwd | xclip -i -sel clip'

# Mere shortcuts
alias sha256='shasum -a 256'
alias sha512='shasum -a 512'
alias cloc=tokei
